{
  "repo_path": ".",
  "ignore_dirs": [
    ".git",
    "node_modules",
    "venv",
    "__pycache__",
    "build",
    "dist",
    "report",
    "db"
  ],
  "file_extensions": [
    ".py",
    ".js",
    ".java",
    ".cpp",
    ".c",
    ".h",
    ".go",
    ".rs",
    ".php",
    ".cs",
    ".ts",
    ".sql",
    ".html",
    ".css"
  ],
  "plugins": {
    "enabled": [
      "builtin.keyword",
      "builtin.security",
      "builtin.todo",
      "builtin.regex"
    ],
    "dirs": [
      "src/plugins/custom/"
    ]
  },
  "output": {
    "report_dir": "report/",
    "export_formats": [
      "excel",
      "html"
    ]
  },
  "scan": {
    "timeout": 300,
    "max_file_size": 10485760
  },
  "plugin_configs": {
    "builtin.keyword": {
      "keywords": [
        "TODO",
        "FIXME",
        "BUG",
        "HACK",
        "XXX"
      ],
      "case_sensitive": false
    },
    "builtin.regex": {
      "patterns": [
        {
          "pattern": "eval\\(",
          "rule_id": "EVAL_USAGE",
          "message": "发现eval函数使用",
          "severity": "high",
          "category": "security",
          "suggestion": "避免使用eval函数，考虑使用更安全的替代方案"
        }
      ]
    }
  }
}